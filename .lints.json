{
  "jslint": {
    "files": [
      "**/*.js",
      "**/*.json",
      "**/.*.json",
      "**/*.yaml",
      "**/.*.yaml",
      "**/*.yml",
      "**/.*.yml"
    ],
    "ignore": [
      "data/**",
      "node_modules/**",
      "**/*.min.js",
      "docker-compose.override.yml",
      ".travis.yml"
    ],
    "rcFile": ".jslintrc"
  },
  "eslint": {
    "files": [
      "**/*.js"
    ],
    "ignore": [
      "data/**",
      "node_modules/**",
      "**/*.min.js"
    ],
    "rcFile": ".eslintrc.json"
  },
  "csslint": {
    "files": [
      "**/*.css"
    ],
    "ignore": [
      "data/**",
      "node_modules/**",
      "**/*.min.css"
    ],
    "rcFile": ".csslintrc"
  },
  "htmlhint": {
    "files": [
      "**/*.html",
      "**/*.htm"
    ],
    "ignore": [
      "data/**",
      "node_modules/**"
    ],
    "rcFile": ".htmlhintrc"
  },
  "w3cjs": {
    "files": [
      "**/*.html",
      "**/*.htm"
    ],
    "ignore": [
      "data/**",
      "node_modules/**"
    ],
    "rcFile": null
  }
}